# HireStack AI - Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# Firebase Web App Config (Firebase Console → Project settings → General → Your apps → Web app)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
# Firestore database ID (new projects often use `default`; older ones use `(default)`)
NEXT_PUBLIC_FIREBASE_DATABASE_ID=default
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional (only if you enabled Google Analytics for the Firebase web app)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Optional: Firebase Storage emulator (useful for local dev if Cloud Storage billing isn't enabled)
# Start it with: `firebase emulators:start --only storage`
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_PORT=9199

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000
